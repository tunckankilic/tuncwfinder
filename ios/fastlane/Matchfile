# Apple ID
username("your-apple-id@example.com")  # DEĞİŞTİRİN

# Certificate types
type("appstore")  # appstore, adhoc, development, enterprise

# Team ID
team_id("YOUR_TEAM_ID")  # DEĞİŞTİRİN

